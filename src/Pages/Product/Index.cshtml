@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["SeriesTitle"] = "Index page";
}

<style>
    body {
        background-image: url('https://i.postimg.cc/YCZdVx2j/Sea-Sharph-Logo.jpg');
        background-repeat: no-repeat;
        background-size: 100% 100%;
        background-attachment: fixed;
        opacity: 1;
    }
</style>

<div class="container">

    <a asp-page="/Product/Create" class="btn btn-link">+ Add new series</a>
    <br/>
    <br/>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>SeriesTitle</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.SeriesTitle</td>
                    <td><a asp-page="Read" asp-route-id="@product.Id">Read</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>